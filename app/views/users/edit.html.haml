= form_for @user, html: {multipart: true, class: "custom_flex_fist_position", style: "height:100%" } do |f|
  - add_error(@user.errors.full_messages.to_sentence, 'alert') if @user.errors.any?
  .row.orders.custom_name.add-margin-top-20
    .col-lg-12.col-xs-12
      .btn_right.add-margin-right-0
        = link_to "Sign Out", signout_path, class: "btn btn-default btn_big_custom custom_btn"
      %h5.page-title
        %span
          ACCOUNT
        %span.icon-record
        %span
          PROFILE
        %span.icon-record
        %span
          EDIT ACCOUNT
    .col-xs-12
      .page-title
  .col-lg-12.custom_table_container.custom_flex_fist_position.btsp_ps_container.btsp_fheader_table_container#account_form_container
    = render partial: 'form', locals: {f:f}
  .row.bottom_buttons_bar
    .col-xs-12.col-sm-12
      .btn_right.add-margin-right-0
        = f.submit "Update", class: "btn btn-default btn_big_custom custom_btn btn_orange"
:javascript
  window.gems.users.init();
  window.gems.new_design_shared.applyCustomScrollbar("#account_form_container");
