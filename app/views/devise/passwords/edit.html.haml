.container
  .d-flex.justify-content-center.h-100
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = render "devise/shared/error_messages", resource: resource
      = f.hidden_field :reset_password_token
      .card
        .card-header
          %h3 Change your password
        .card-body
          .input-group.form-group
            .input-group-prepend
              %span.input-group-text
                %i.fa.fa-envelope.color_white
            = f.password_field :password, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "New Password"
          .input-group.form-group
            .input-group-prepend
              %span.input-group-text
                %i.fa.fa-key.color_white
            = f.password_field :password_confirmation, autocomplete: "current-password", class: "form-control", placeholder: "Password Confirmation"

          .form-group.add_padding_top_5{style: "padding-left: 10%"}
            = f.submit "Change my password", class: "btn login_btn color_white register_btn text_center"
        .card-footer
          .d-flex.justify-content-center
            = link_to "Sign in", new_user_session_path, :method => :get, class: "link"


