.container
  .d-flex.justify-content-center.h-100
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .card
        .card-header
          %h3 Sign up
        .card-body
          .input-group.form-group
            .input-group-prepend
              %span.input-group-text
                %i.fa.fa-envelope.color_white
            = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email"
          .input-group.form-group
            .input-group-prepend
              %span.input-group-text
                %i.fa.fa-key.color_white
            = f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password"
          .input-group.form-group
            .input-group-prepend
              %span.input-group-text
                %i.fa.fa-key.color_white
            = f.password_field :password_confirmation, autocomplete: "current-password", class: "form-control", placeholder: "Password confirmation"
            = f.hidden_field :admin, value: false
            = f.hidden_field :manager, value: false
            = f.hidden_field :employee, value: true
          .form-group.add_padding_top_5
            = f.submit "Sign up", class: "btn login_btn color_white"
        .card-footer
          .d-flex.justify-content-between
            = link_to "Forgot your password?", new_user_password_path, :method => :get, class: "link color_white"
            = link_to "Sign in", new_user_session_path, :method => :get, class: "link color_white"
