%html{style: "height: 100%; background-color: rgb(231, 231, 231)!important"}
  %head
    %meta{content: "text/html; charset=utf-8", "http-equiv" => "Content-Type"}
    %title Golf Genius Golf Shop
  %link{:href => "https://use.typekit.net/zli1xaf.css", :rel => "stylesheet"}
  %body
    %div{style: "padding: 0 10%; margin-top:10px; font-weight: 300; font-family: 'proxima-nova', sans-serif; letter-spacing: 1px;position: relative; font-size: 13px; color: rgb(102,102,102); line-height: 25px;"}
      %div{style: "background-color: white!important; margin-left: auto; margin-right: auto; max-width: 800px;"}
        - if @banner_url.present?
          %div{style: "margin-bottom: -15px"}
            %img{src: @banner_url, style: "margin-bottom: 0; width: 100%; margin-bottom: 20px;"}
        %div{style: "padding-bottom: 10%; #{@banner_url.blank? ? "padding-top: 15px;!important" : ''}"}
          %div{style: "padding: 0 30px;"}
            %div{style: "border: 1px solid rgb(207, 207, 207); padding-top: 70px; padding-left: 15px!important; padding-right: 15px!important;"}
              %p{style: "font-family: 'proxima-nova', sans-serif; font-size: 28px; color: black; padding-left: 20px"}
                = yield :head
                %span
                  = yield :mail
                %div{style: "font-family: 'proxima-nova', sans-serif; font-size: 16px; margin-top: 0px; margin-bottom: 5%; padding: 0px; color: black; padding-left: 20px"}
                  = yield :content
                - if @logo_url.present?
                  %div{ style: "text-align: center;"}
                    %img{src: @logo_url, style: "width: 25%; margin-top: 30px;"}
                = image_tag('gsg_logo.png', alt: "Golf Genius Golf Shop", style: "width: 25%; margin-top: 30px;")
