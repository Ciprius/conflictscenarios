= form_for @brochure do |f|
  - if @brochure.errors.any?
    #error_explanation
      %h2= "#{pluralize(@brochure.errors.count, "error")} prohibited this brochure from being saved:"
      %ul
        - @brochure.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :subdescription
    = f.text_field :subdescription
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :sent_at
    = f.date_select :sent_at

  .actions
    = f.submit 'Save'
