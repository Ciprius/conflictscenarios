-content_for :head do
  = t ".head"

-content_for :mail do
  - if @user.first_name.present?
    %span{style: "color: black; text-decoration: none"}
      = "#{@user.first_name} #{@user.last_name}!"
  - else
    = link_to "#{@user.email}!", "#", :style => "color: black; text-decoration: none"

-content_for :content_head do
  = t ".content_head"

-content_for :content do
  %p Congratulations! You've been added to the Eight Investment Group team.
  %p{style: "font-weight: bold; font-size: 22px"} #{@user.password}
  %p="After authentication please fill in your details.<br/>You can confirm your account email through the link below:".html_safe
  %p= link_to (t ".confirm_account"), confirmation_url(@user, confirmation_token: @user.confirmation_token), :style => "color: #0098c4; border-bottom:1px solid #0098c4; font-size:22px;  text-decoration: none"
